    <div class="row justify-content-center align-items-center">
        <div class="col">
            <h1 class="text-center">Habit Details</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="jumbotron m-auto">
                <span class='text-justify'><%== in_paragraphs(@intro_spiel) %></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                </div>
                <div class="card-body">

                    <div class="simple-slider">
                        <div class="swiper-container">
                            <div class="swiper-wrapper">
                            <% @habits.each do |habit| %>
                                <div class="swiper-slide">
                                    <div class="row">
                                        <div class="col-lg-11">
                                            <div class="row">
                                                <div class="col">
                                                    <div class="table-responsive">
    <table>
        <caption>
            <h2><%= habit.description %></h2>
        </caption>
        <tr>
            <td>Date of Habit Commencement</td>
            <td><%= habit.date_of_initiation %></td>
        </tr>
        <tr>
            <td>Habit Aspect</td>
            <td><%= habit.aspect %></td>
        </tr>
        <tr>
            <td>Completed Today?</td>
            <td><%= !!habit.head_node.today %></td>
        </tr>
        <tr>
            <td>Streak</td>
            <td><%= calculate_streak(habit) %></td>
        </tr>
    </table>
    <form class="delete" action="<%= "/habits/#{habit.id}/delete" %>" method="post">
        <button type="submit" class="inline">Delete this habit</button>
    </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
